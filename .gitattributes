# Auto detect text files and perform LF normalization
* text=auto

# Python files - always use LF
*.py text eol=lf
*.pyw text eol=lf

# Shell scripts - always use LF
*.sh text eol=lf
*.bash text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# JSON files
*.json text eol=lf

# Markdown files
*.md text eol=lf

# Config files
*.ini text eol=lf
*.conf text eol=lf
*.env text eol=lf

# Docker files
Dockerfile text eol=lf
docker-compose.yml text eol=lf
*.dockerfile text eol=lf

# Binary files
*.pdf binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.db binary
*.xlsx binary
*.xls binary

